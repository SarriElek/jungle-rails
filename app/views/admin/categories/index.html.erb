<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>

    <% if flash[:alert] %>
        <span class="alert alert-danger pull-right cat-message"><%= flash[:alert] %></span>
    <% end %>

    <% if flash[:notice] %>
        <span class="alert alert-success pull-right cat-message"><%= flash[:notice] %></span>
    <% end %>

  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
